@using EventbriteMvc.Services
@using EventbriteMvc.ViewModels
@using EventbriteMvc.Models.UserModel


@inject IIdentityService<ApplicationUser> identityService

@{
    ViewData["Title"] = "My Cart";
}

<form method="post" id="cartForm">
    <div class="esh-basket">
        @Html.Partial("_Header", new List<Header>() {
            new Header() { Controller = "Event", Text = "Back to event" } })

        @await Component.InvokeAsync("CartList", new { user = identityService.Get(User) })
    </div>
</form>
